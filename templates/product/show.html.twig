{% extends "base.html.twig" %}

{% block title %}{% endblock title %}

{% block body %}
    {% include "partials/header.html.twig" %}
    <div class="container mt-4">
        <a href="{{ path('product.index') }}" class="btn btn-primary">Lista de Productos</a>
        {% if product %}
            <h2 class="display-4 text-center text-primary">{{ product.name }}</h2>
            <hr>
            <div class="row">
                <div class="col-5 mb-3">
                    <picture class="figure bg-dark w-100 p-3" style="max-width: 300px;">
                        <img src="{{ '/uploads/' ~ product.image }}" width="100%" alt="">
                    </picture>
                </div>
                <div class="col-7">
                    <p class="fs-4 mb-2"><strong>Codigo del producto:</strong> {{ product.code }}</p>
                    <p class="fs-4 mb-2"><strong>Nombre del producto:</strong> {{ product.name }}</p>
                    <p class="fs-4 mb-2"><strong>Descripcion:</strong> {{ product.description }}</p>
                    <p class="fs-4 mb-2"><strong>Brand:</strong> {{ product.brand }}</p>
                    <p class="fs-4 mb-2"><strong>Precio:</strong> ${{ product.price }}</p>
                </div>
            </div>
        {% else %}
            <p>No existe producto, por favor vuelve a la lista de Productos</p>
        {% endif %}
    </div>
{% endblock body %}